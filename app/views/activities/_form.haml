= content_for :model_name, Activity.name.underscore.to_sym
= javascript_include_tag "markdown"

= errors_for(@activity)

= form_for @activity do |f|
  .form-group
    = f.label :name
    = f.text_field :name, placeholder: "Name", class: "form-control"
  .form-group
    = f.label :type
    = f.select :type, ['club', 'sport', 'group']
  .form-group
    = f.label :summary
    = f.text_field :summary, placeholder: "Short Description", class: "form-control"
  .form-group
    = f.label :markdown
    ~ f.text_area :markdown, placeholder: "Content", rows: 10, class: "form-control markdown"

  = f.submit "Save", class: "btn btn-success pull-right", id: "submit-button"
