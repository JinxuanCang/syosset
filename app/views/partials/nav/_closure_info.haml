.closure-info
  .closure-icon
    - if @active_closure.type == 'snow'
      %i.fa.fa-snowflake-o
    - else
      %i.fa.fa-exclamation-triangle
  .closure-content
    %p.dates
      Syosset High School is closed
      - if @active_closure.start_date == @active_closure.end_date
        on
        = @active_closure.start_date.strftime("%A") + '.'
      - else
        from
        = @active_closure.start_date.strftime("%A")
        to
        = @active_closure.end_date.strftime("%A") + '.'
    %p= @active_closure.content