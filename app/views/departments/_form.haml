= errors_for(@department)

= form_for @department do |f|
  .form-group
    = f.label :name
    = f.text_field :name, placeholder: "Name", class: "form-control"
  .form-group
    = f.label :phone
    = f.text_field :phone, placeholder: "Phone Number", class: "form-control"
  .form-group
    = f.label :short_description
    = f.text_field :short_description, placeholder: "Short Description", class: "form-control"
  - if !@department.content.blank? && current_user.super_admin
    .form-group
      = f.label :content, "OLD CONTENT"
      = f.text_area :content, rows: 10, class: "form-control", disabled: true
  .form-group
    = f.label :markdown
    = f.text_area :markdown, placeholder: "Content", rows: 10, class: "form-control markdown"

  = f.submit "Save", class: "btn btn-success pull-right", id: "submit-button"