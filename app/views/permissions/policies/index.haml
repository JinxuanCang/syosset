%ol.breadcrumb
  %li.active Policies
  = link_to new_policy_path, class: 'pull-right' do
    = fa_icon 'key'
    Create Policy
%h1 Policies
%table.table.table-responsive
  %thead
    %th ID
    %th Priority
    %th Name
    %th Context
  %tbody
    %tr
      - @policies.order([:priority, :desc]).each do |policy|
        = content_tag_for(:tr, policy) do
          %td= link_to policy.id, policy
          %td= policy.priority
          %td= policy.name
          %td= policy.context
