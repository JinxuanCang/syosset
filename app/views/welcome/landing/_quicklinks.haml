.landing-quicklinks.panel.panel-sosset
  .panel-heading
    = link_to "Quick Links", links_path
    %small
      = link_to links_path do
        = fa_icon 'ellipsis-v'
        Click to see all
  .panel-body
    %p
      %a{:href => "https://ic.syosset.k12.ny.us/"}
        = fa_icon 'graduation-cap'
        Parent and Teacher Portal
    %p
      %a{:href => "http://portal.office365.com/"}
        = fa_icon 'envelope'
        Teacher Email
    %p
      %a{:href => "http://www.syossetschools.org/Calendar/Default.aspx?period=monthgrid"}
        = fa_icon 'calendar'
        District Calendar
    - @links.each do |link|
      %p
        = link_to link[:target] do
          = fa_icon (link.icon.nil? ? "link" : link.icon.gsub('fa-', '')) # TODO: don't store icons prefixed with fa- in the db
          = link.name
